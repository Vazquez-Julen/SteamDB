<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="open.data.DashboardController">

    <top>
        <Label fx:id="headerLabel" text="Merkatuaren Laburpena"
               style="-fx-font-size: 32px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
            <content>
                <TilePane fx:id="gameCardsPane" hgap="20" vgap="20" prefColumns="4" style="-fx-padding: 20;">
                    <!-- Los GameCard se añadirán dinámicamente desde el controlador -->
                </TilePane>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
