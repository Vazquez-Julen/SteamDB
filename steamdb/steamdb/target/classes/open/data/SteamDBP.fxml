<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="open.data.SteamDBPController"
      prefWidth="1200"
      prefHeight="800">

    <children>
        <StackPane prefWidth="1200"
                   prefHeight="800"
                   style="-fx-background-color: linear-gradient(from 0% 100% to 0% 0%, #0b1c2b 0%, #0f2a44 50%, #1b3a5a 100%)">

            <children>
                <VBox spacing="40" alignment="CENTER">

                    <!-- Logo -->
                    <ImageView fitWidth="300"
                               preserveRatio="true"
                               smooth="true">
                        <image>
                            <Image url="@SteamDBLogo.png"/>
                        </image>
                    </ImageView>

                    <!-- Botones -->
                    <HBox spacing="40" alignment="CENTER">

                        <Button fx:id="players"
                                text="Players"
                                prefWidth="180"
                                prefHeight="50"
                                style="-fx-background-color: linear-gradient(to bottom, #1b3a5a, #0f2a44);
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 8px;
                                       -fx-border-radius: 8px;
                                       -fx-border-color: #3a7bd5;
                                       -fx-border-width: 2px;" />

                        <Button fx:id="shop"
                                text="Shop"
                                prefWidth="180"
                                prefHeight="50"
                                style="-fx-background-color: linear-gradient(to bottom, #1b3a5a, #0f2a44);
                                       -fx-text-fill: white;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 8px;
                                       -fx-border-radius: 8px;
                                       -fx-border-color: #3a7bd5;
                                       -fx-border-width: 2px;" />

                    </HBox>

                </VBox>
            </children>

        </StackPane>
    </children>
</VBox>
