<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>

<BorderPane fx:id="root"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="open.data.ShopController"
            prefWidth="1200"
            prefHeight="800"
            style="-fx-background-color: linear-gradient(from 0% 100% to 0% 0%,
                    #0b1c2b 0%,
                    #0f2a44 50%,
                    #1b3a5a 100%);">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="20"
              style="-fx-padding: 20;">

            <!-- Botón atrás -->
            <Button fx:id="backButton"
                    text="← Atzera"
                    prefWidth="120"
                    prefHeight="40"
                    style="-fx-background-color: linear-gradient(to bottom, #1b3a5a, #0f2a44);
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 8px;
                           -fx-border-radius: 8px;
                           -fx-border-color: #3a7bd5;
                           -fx-border-width: 2px;" />

            <!-- Título -->
            <Label fx:id="headerLabel"
       text="Salmenta Gehienak"
       style="-fx-font-size: 32px;
              -fx-font-weight: bold;
              -fx-text-fill: white;"
       alignment="CENTER"
       maxWidth="Infinity" />

        </HBox>
    </top>

    <!-- CONTENIDO -->
    <center>
        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background: transparent; -fx-background-color: transparent;">

            <content>
                <TilePane fx:id="gameCardsPane"
                          prefColumns="4"
                          prefTileWidth="260"
                          hgap="20"
                          vgap="20"
                          style="-fx-padding: 30;">
                    <!-- Cartas añadidas dinámicamente -->
                </TilePane>
            </content>

        </ScrollPane>
    </center>

</BorderPane>
